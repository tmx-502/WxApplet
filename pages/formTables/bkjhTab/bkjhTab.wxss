.iconAnimation {
  transform: rotate(90deg);
}

.footer text {
  font-weight: 700;
  font-size: 30rpx;
}


.footer .pdyj {
  border: 2rpx;
  border-radius: 30rpx;
  background-color: #D9EAFC;
  margin: 10rpx 20rpx;
  padding-top: 20rpx;
}

.footer .pdyj text {
  margin-left: 40rpx;
}

.footer .pdyj radio {
  display: block;
  border-bottom: 2rpx solid #D9D9D9;
  margin: 12rpx 26rpx;
  padding: 20rpx;
  font-weight: 400;
  font-size: 28rpx;
}

.footer .qz {
  display: flex;
  margin: 15rpx 20rpx;
}

.footer .qz text {
  width: 200rpx;

}

.footer .qz image {
  flex: 1;
  height: 80rpx;
}

button[form-type='submit'] {
  margin: 20rpx 0;
}

.i-swipeout-demo-item {
  border-bottom: #333 solid 1px;
}



.i-swipeout-demo-button-group {
  height: 100%;
  width: 100%;
}

.i-swipeout-demo-button {
  width: 60px;
  float: left;
  display: flex;
  height: 100%;
  justify-content: center;
  background: #2d8cf0;
  color: #fff;
  align-items: center;
}

.demo-container {
  width: 370rpx;
  height: 100vh;
  background: #fff;
}


.preview image {
  width: 340rpx;
  height: 340rpx;
  margin: 14rpx 15rpx 0;
}

.showIco {
  display: none;
}

.demo-container .addIcon {
  width: 340rpx;
  height: 340rpx;
  margin: 0 15rpx;
  text-align: center;
  line-height: 340rpx;
  border: 1rpx solid #bbb;
}

.demo-container text {
  text-align: center;
  position: fixed;
  bottom: 20rpx;
  width: 100%;
  left: auto;
  color: #FFB800;
}

.preview mp-icon {
  position: absolute;
  right: -8rpx;
  border-bottom: 20rpx solid rgba(200, 200, 200, 0);
}