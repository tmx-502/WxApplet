.title {
  display: flex;
  justify-content: center;
  font-size: 36rpx;
  font-weight: 600;
}

textarea {
  font-size: 30rpx !important;
  line-height: 30rpx;
  min-height: 40rpx;
  padding-left: 30rpx;
  display: inline-block;
  width: 630rpx;
}

.qtItems mp-icon {
  align-items: center;
}


i-cell text {
  position: absolute;
}

.Tab_content .qt text {
  margin-left: 60rpx;
}

.Tab_content .qt mp-icon {
  float: right;
  margin-right: 40rpx;
}


.Tab_header view {
  display: flex;
  border-radius: 50rpx;
  background-color: #dddddd;
  margin: 20rpx 10rpx;
}

.Tab_header view text {
  color: #01AAED;
  width: 25%;
  display: flex;
  line-height: 71rpx;
  margin-left: 20rpx;
  font-size: 28rpx;
}

.Tab_header view input {
  width: 80%;
  height: 70rpx;
  font-size: 28rpx;
}

picker {
  width: 80%;
}

/* 检验记录 */
.cpwg,
.dqxn,
.qt {
  text-align: center;
  background-color: #00A988;
  margin: 0 20rpx 20rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
}

.isQualified {
  display: flex;
  width: 30%;
  align-items: center;
}

.isQualified view {
  width: 120rpx;
  background-color: #1E9FFF;
  height: 60rpx;
  margin-right: 10rpx;
  border-radius: 10rpx;
  text-align: center;
  font-size: 30rpx;
  font-weight: 600;
  color: #fff;
  line-height: 60rpx;
}

.wgItems,
.xnItems {
  display: flex;
  margin: 10rpx 15rpx 10rpx 40rpx;
}

.qtItems {
  display: flex;
  margin: 10rpx 0 10rpx 20rpx;
}

.qtItems text {
  font-size: 28rpx;
  justify-content: center;
  margin: 0;
}

.qzr text {
  width: 60% !important
}

.qzr picker {
  width: 50% !important;
}

