/* test/test.wxss */


.title {
  display: flex;
  justify-content: center;
  font-size: 36rpx;
  font-weight: 600;
}



.condition {
  width: 80%;
  padding: 0 10rpx 10rpx 0;
  font-size: 28rpx;
}

.Tab_content text {
  margin-left: 60rpx;
}

.Tab_content image {
  width: 80rpx;
  height: 80rpx;
  float: right;
  margin-right: 20rpx;
}

/* .qt input {} */

.Tab_header view {
  display: flex;
  border-radius: 50rpx;
  background-color: #dddddd;
  margin: 20rpx 10rpx;
}

.Tab_header view text {
  color: #01AAED;
  width: 25%;
  display: flex;
  line-height: 71rpx;
  margin-left: 20rpx;
}

.Tab_header view input {
  width: 80%;
  height: 70rpx;
}

/* 检验记录 */
.cpwg,
.dqxn,
.qt {
  text-align: center;
  background-color: #00A988;
  margin: 0 20rpx 20rpx;
  height: 80rpx;
  line-height: 80rpx;
}

.isQualified {
  display: flex;
  width: 30%;
  align-items: center;
}

.isQualified view {
  width: 120rpx;
  background-color: #1E9FFF;
  height: 60rpx;
  margin-right: 10rpx;
  border-radius: 10rpx;
  text-align: center;
  font-size: 30rpx;
  font-weight: 600;
  color: #fff;
  line-height: 60rpx;
}

.wgItems,
.xnItems,
.qtItems {
  display: flex;
  margin: 10rpx 15rpx 10rpx 40rpx;
  border-bottom: 4rpx solid #D9D9D9;
}



.sfhgPicker {
  width: 120rpx;
  background-color: #1E9FFF;
  height: 60rpx;
  margin-right: 10rpx;
  border-radius: 10rpx;
  text-align: center;
  font-size: 30rpx;
  font-weight: 600;
  color: #fff;
  line-height: 60rpx;
}



.iconAnimation {
  transform: rotate(90deg);
}

.footer text {
  font-weight: 700;
  font-size: 30rpx;
}


.footer .pdyj {
  border: 2rpx;
  border-radius: 30rpx;
  background-color: #D9EAFC;
  margin: 10rpx 20rpx;
  padding-top: 20rpx;
}

.footer .pdyj text {
  margin-left: 40rpx;
}

.footer .pdyj radio {
  display: block;
  border-bottom: 2rpx solid #D9D9D9;
  margin: 12rpx 26rpx;
  padding: 20rpx;
  font-weight: 400;
}

.footer .qz {
  display: flex;
  margin: 15rpx 20rpx;
}

.footer .qz text {
  width: 200rpx;

}

.footer .qz image {
  flex: 1;
  height: 80rpx;
}

button[form-type='submit'] {
  margin: 20rpx 0;
}