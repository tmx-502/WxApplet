/* components/CheckItem/CheckItem.wxss */
@import "/static/icon/iconfont.wxss";

.CheckItem {
  text-align: center;
  background-color: #00A988;
  margin: 0 20rpx 20rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
}

.isQualified {
  display: flex;
  width: 30%;
  align-items: center;
}

.isTrueIcon {
  display: flex;
  align-items: center;
}

.isQualified view {
  width: 120rpx;
  background-color: #1E9FFF;
  height: 60rpx;
  margin-right: 10rpx;
  border-radius: 10rpx;
  text-align: center;
  font-size: 30rpx;
  font-weight: 600;
  color: #fff;
  line-height: 60rpx;
}

.Items {
  display: flex;
  margin: 10rpx 20rpx 10rpx 25rpx;
}

.Item {
  display: flex;
  margin-bottom: 15rpx;
}

.Item .condition {
  width: 650rpx;
  font-size: 30rpx;
}

.Item mp-icon {
  margin: 0 10rpx;
  width: 40rpx;
}



.CheckItem mp-icon {
  float: right;
  margin-right: 40rpx;
}



.CheckItem text {
  margin-left: 60rpx;
}

.i-cell {
  padding: 0px !important
}


.i-swipeout-demo-item {
  border-bottom: #dddee1 solid 1px;
}



.i-swipeout-demo-button-group {
  height: 100%;
  width: 100%;
}

.i-swipeout-demo-button {
  width: 60px;
  float: left;
  display: flex;
  height: 100%;
  justify-content: center;
  background: #2d8cf0;
  color: #fff;
  align-items: center;
}

.demo-container {
  width: 370rpx;
  height: 100vh;
  background: #fff;
}


.preview image {
  width: 340rpx;
  height: 340rpx;
  margin: 14rpx 15rpx 0;
}


.finish-btn {
  position: fixed;
  top: 0;
  z-index: 100;
  right: 0;
  transform: scale(0.7);
}

.showIco {
  display: none;
}

.demo-container .addIcon {
  width: 340rpx;
  height: 340rpx;
  margin: 0 15rpx;
  text-align: center;
  line-height: 340rpx;
  border: 1rpx solid #bbb;
}

.demo-container text {
  text-align: center;
  position: fixed;
  bottom: 20rpx;
  width: 100%;
  left: auto;
  color: #FFB800;
}

.preview mp-icon {
  position: absolute;
  right: -8rpx;
  border-bottom: 20rpx solid rgba(200, 200, 200, 0);
}